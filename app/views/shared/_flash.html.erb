<% flash.each do |type, message| %>
  <% if message.is_a?(String) %>
    <%= tag.div message,
                class: [ "mx-2 mt-2 rounded-xl p-2 shadow opacity-90 cursor-pointer break-normal", flash_style(type) ],
                data: { controller: "element-remove", action: "click->element-remove#click", turbo_temporary: true } %>
  <% end %>
<% end %>