<% content_for :title, "Accounts" %>

<%= render PageComponent.new(title: "Accounts") do |component| %>
  <% component.with_action_list do %>
    <%= link_to "New account", new_account_path, class: "btn btn-primary" %>
  <% end %>

  <div id="accounts" class="space-y-4">
    <% @accounts.each do |account| %>
      <%= render account %>
    <% end %>
  </div>
<% end %>
