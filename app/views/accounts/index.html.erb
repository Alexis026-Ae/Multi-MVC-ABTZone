<% content_for :title, "Accounts" %>
<div class="w-full">

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Accounts</h1>
    <%= link_to "New account", new_account_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="accounts" class="min-w-full">
    <% @accounts.each do |account| %>
      <%= render account %>
      <p>
        <%= link_to "Show this account", account, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
